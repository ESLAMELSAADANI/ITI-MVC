@model Department
@{
    ViewData["Title"] = "DepartmentCourses";
}

<div class="container my-5">
    <h1 class="text-center mb-5">
        Courses Of Department <span class="text-primary fw-bold">@Model.DeptName</span>
    </h1>

    @if (Model == null || !Model.Courses.Any())
    {
        <p class="text-center text-muted fs-5"><i class="bi bi-exclamation-circle-fill"></i> No Courses Found!</p>
    }
    else
    {
        <div class="row g-4">
            @for (int i = 0; i < Model.Courses.Count(); i++)
            {
                var course = Model.Courses.ElementAt(i);
                <div class="col-md-6 col-lg-4">
                    <div class="card shadow-sm rounded-4 hover-card h-100">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <div>
                                <h5 class="card-title text-primary fw-bold">
                                    <i class="bi bi-journal-bookmark-fill"></i> @course.CrsName
                                </h5>
                                <p class="card-text mb-1">
                                    <i class="bi bi-hash"></i> <strong>Id:</strong> @course.Id
                                </p>
                                <p class="card-text mb-1">
                                    <i class="bi bi-clock-fill"></i> <strong>Duration:</strong> @course.CrsDuration H
                                </p>
                            </div>
                            <div class="mt-3 d-flex justify-content-between flex-wrap">
                                <a asp-controller="department"
                                   asp-action="ViewCourseStudents"
                                   asp-route-crsId="@course.Id"
                                   asp-route-deptID="@Model.DeptId"
                                   class="btn btn-primary btn-sm mb-2">
                                    <i class="bi bi-people-fill"></i> View Students
                                </a>

                                <form asp-action="deleteDepartmentCourse" method="post" class="d-inline mb-2">
                                    <input type="hidden" asp-for="@Model.DeptId" />
                                    <input type="hidden" asp-for="@Model.DeptName" />
                                    <input type="hidden" asp-for="@Model.Capacity" />
                                    <input type="hidden" name="courseID" value="@course.Id" />
                                    <button type="submit" class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash-fill"></i> Delete Course
                                    </button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }

    <div class="d-flex justify-content-center mt-5">
        <a asp-action="index" class="btn btn-primary btn-lg hover-btn">
            <i class="bi bi-arrow-left-circle"></i> Return
        </a>
    </div>
</div>

<style>
    body {
        background: linear-gradient(135deg, #f8f9fa, #e9ecef);
    }

    .card {
        border-radius: 1rem;
        transition: transform 0.3s, box-shadow 0.3s;
    }

    .hover-card:hover {
        transform: translateY(-5px) scale(1.02);
        box-shadow: 0 15px 35px rgba(0,0,0,0.2);
    }

    .hover-btn {
        transition: transform 0.2s;
    }

        .hover-btn:hover {
            transform: scale(1.05);
        }

    .card-title i, .card-text i, .btn i {
        margin-right: 6px;
    }

    .d-flex.justify-content-between.flex-wrap {
        gap: 0.5rem;
    }

    @@media (max-width: 576px) {
        .card-body

    {
        text-align: center;
    }

    .d-flex.justify-content-between.flex-wrap {
        flex-direction: column;
    }

    }
</style>
