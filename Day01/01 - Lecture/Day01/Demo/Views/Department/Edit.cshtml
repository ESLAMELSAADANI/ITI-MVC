@model Department
@{
    ViewData["Title"] = "Edit";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg rounded-4 p-4 hover-card">
                <h2 class="text-center mb-4 fw-bold">
                    Edit <span class="text-primary">@Model.DeptName</span> Department
                </h2>

                <form method="post">
                    <input type="hidden" asp-for="@Model.DeptId" />

                    <div class="mb-3 form-floating">
                        <input class="form-control" asp-for="DeptName" placeholder="Department Name" />
                        <label asp-for="DeptName">Department Name</label>
                        <span asp-validation-for="DeptName" class="text-danger"></span>
                    </div>

                    <div class="mb-3 form-floating">
                        <input class="form-control" asp-for="Capacity" placeholder="Capacity" />
                        <label asp-for="Capacity">Capacity</label>
                        <span asp-validation-for="Capacity" class="text-danger"></span>
                    </div>

                    <div class="d-flex justify-content-between mt-4">
                        <button asp-action="edit" asp-controller="department" class="btn btn-primary btn-lg hover-btn">
                            <i class="bi bi-pencil-square"></i> Edit
                        </button>
                        <button asp-action="delete" asp-controller="department" class="btn btn-danger btn-lg hover-btn">
                            <i class="bi bi-trash-fill"></i> Delete
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    body {
        background: linear-gradient(135deg, #f8f9fa, #e9ecef);
    }

    .card {
        border-radius: 1rem;
        transition: transform 0.3s, box-shadow 0.3s;
    }

    .hover-card:hover {
        transform: translateY(-5px) scale(1.02);
        box-shadow: 0 15px 35px rgba(0,0,0,0.2);
    }

    .hover-btn {
        transition: transform 0.2s;
    }

        .hover-btn:hover {
            transform: scale(1.05);
        }

    .form-floating > input:focus ~ label,
    .form-floating > input:not(:placeholder-shown) ~ label {
        color: #495057;
        font-weight: bold;
    }

    .form-floating > input {
        padding: 1rem 0.75rem;
        font-size: 1rem;
    }
</style>

@section scripts {
    <partial name="_ValidationScriptsPartial" />
}
