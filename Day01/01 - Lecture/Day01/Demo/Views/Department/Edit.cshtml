@model Department
@{
	ViewData["Title"] = "Edit";
}

<h1>Edit <span class="text-primary">@Model.DeptName</span> Department:</h1>
<form method="post">
	<input type="hidden" asp-for="@Model.DeptId" />

	<label class="col-form-label" asp-for="DeptName">Name</label><br />
	<input class="form-control-sm" asp-for="@Model.DeptName" /><span asp-validation-for="DeptName"></span><br /><br />

	<label class="col-form-label" asp-for="Capacity">Capacity</label><br />
	<input class="form-control-sm" asp-for="@Model.Capacity" /><span asp-validation-for="Capacity"></span><br /><br />

	<button asp-action="edit" asp-controller="department" class="btn btn-primary">Edit</button>
	<button asp-action="delete" asp-controller="department" class="btn btn-danger">Delete</button>
</form>
@section scripts {
	<partial name="_ValidationScriptsPartial" />
}
