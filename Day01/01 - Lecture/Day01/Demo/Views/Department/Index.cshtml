@model IEnumerable<Department>
@{
    ViewData["Title"] = "Departments";
}

<div class="container my-5">
    <h1 class="text-center mb-4 text-primary fw-bold">
        <i class="bi bi-building"></i> Departments
    </h1>

    <div class="table-responsive shadow-sm rounded-4 overflow-hidden">
        <table class="table table-striped table-hover align-middle text-center mb-0">
            <thead class="table-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Capacity</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model == null || !Model.Any())
                {
                    <tr>
                        <td colspan="4" class="text-muted py-4">
                            <i class="bi bi-exclamation-circle display-6"></i>
                            <div class="mt-2">No Departments Found</div>
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var dept in Model)
                    {
                        <tr class="align-middle">
                            <td class="fw-bold">@dept.DeptId</td>
                            <td>@dept.DeptName</td>
                            <td>@dept.Capacity</td>
                            <td class="d-flex justify-content-center flex-wrap gap-2">
                                <a class="btn btn-info btn-sm" asp-controller="department" asp-action="details" asp-route-id="@dept.DeptId">
                                    <i class="bi bi-info-circle"></i> Details
                                </a>
                                <a class="btn btn-secondary btn-sm" asp-controller="department" asp-action="edit" asp-route-id="@dept.DeptId">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a class="btn btn-primary btn-sm" asp-controller="department" asp-action="departmentCourses" asp-route-id="@dept.DeptId">
                                    <i class="bi bi-journal-bookmark"></i> Courses
                                </a>
                                <a class="btn btn-success btn-sm" asp-controller="department" asp-action="departmentAddCourses" asp-route-id="@dept.DeptId">
                                    <i class="bi bi-plus-circle"></i> Add Courses
                                </a>
                                <a class="btn btn-warning btn-sm" asp-controller="department" asp-action="editDepartmentCourses" asp-route-id="@dept.DeptId">
                                    <i class="bi bi-pencil"></i> Edit Courses
                                </a>
                                <a class="btn btn-danger btn-sm" asp-controller="department" asp-action="delete" asp-route-id="@dept.DeptId"
                                   onclick="return confirm('Are you sure you want to delete this department?');">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .table-responsive {
        background: #ffffff;
        border-radius: 1rem;
        box-shadow: 0 8px 25px rgba(0,0,0,0.1);
        overflow: hidden;
    }

    .table-hover tbody tr:hover {
        background-color: #f1f5f9 !important;
        transform: scale(1.01);
        transition: all 0.2s;
    }

    .btn i {
        margin-right: 4px;
    }

    tbody td {
        vertical-align: middle;
    }
</style>
