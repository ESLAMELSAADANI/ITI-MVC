@model DepartmentCoursesVM
@{
    ViewData["Title"] = "EditDepartmentCourses";
}

<div class="container my-5">
    <h1 class="text-center mb-5">
        Edit Department <span class="text-primary fw-bold">@Model.Department.DeptName</span> Courses
    </h1>

    <form method="post">
        <input type="hidden" asp-for="@Model.Department.DeptId" />

        <div class="row g-4">
            <!-- Left Table: Courses To Delete -->
            <div class="col-md-6">
                <div class="card shadow-sm rounded-4 hover-card">
                    <div class="card-header bg-danger text-white fw-bold text-center">
                        <i class="bi bi-trash-fill"></i> Courses To Delete
                    </div>
                    <div class="card-body p-3 table-responsive">
                        <table class="table table-striped table-hover align-middle text-center mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>#</th>
                                    <th>Name</th>
                                    <th>Duration</th>
                                    <th>Select</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.DepartmentCourses == null || !Model.DepartmentCourses.Any())
                                {
                                    <tr>
                                        <td colspan="4" class="text-muted py-3">No Courses To Delete Found!</td>
                                    </tr>
                                }
                                else
                                {
                                    @foreach (var course in Model.DepartmentCourses)
                                    {
                                        <tr>
                                            <td>@course.Id</td>
                                            <td>@course.CrsName</td>
                                            <td>@course.CrsDuration H</td>
                                            <td>
                                                <input type="checkbox" name="CoursesToDelete" value="@course.Id" />
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Right Table: Courses To Add -->
            <div class="col-md-6">
                <div class="card shadow-sm rounded-4 hover-card">
                    <div class="card-header bg-success text-white fw-bold text-center">
                        <i class="bi bi-plus-circle-fill"></i> Courses To Add
                    </div>
                    <div class="card-body p-3 table-responsive">
                        <table class="table table-striped table-hover align-middle text-center mb-0">
                            <thead class="table-light">
                                <tr>
                                    <th>#</th>
                                    <th>Name</th>
                                    <th>Duration</th>
                                    <th>Select</th>
                                </tr>
                            </thead>
                            <tbody>
                                @if (Model.OtherCourses == null || !Model.OtherCourses.Any())
                                {
                                    <tr>
                                        <td colspan="4" class="text-muted py-3">No Courses To Add Found!</td>
                                    </tr>
                                }
                                else
                                {
                                    @foreach (var course in Model.OtherCourses)
                                    {
                                        <tr>
                                            <td>@course.Id</td>
                                            <td>@course.CrsName</td>
                                            <td>@course.CrsDuration H</td>
                                            <td>
                                                <input type="checkbox" name="CoursesToAdd" value="@course.Id" />
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Centered button after both tables -->
        <div class="d-flex justify-content-center mt-4">
            <button type="submit" class="btn btn-primary px-5 hover-btn">
                <i class="bi bi-check-circle"></i> Apply Changes
            </button>
        </div>
    </form>
</div>

<style>
    .card {
        border-radius: 1rem;
        box-shadow: 0 8px 25px rgba(0,0,0,0.1);
        transition: transform 0.3s, box-shadow 0.3s;
    }

    .hover-card:hover {
        transform: translateY(-5px) scale(1.02);
        box-shadow: 0 15px 35px rgba(0,0,0,0.2);
    }

    .table-hover tbody tr:hover {
        background-color: #f1f5f9;
        transform: scale(1.01);
        transition: all 0.2s;
    }

    .btn.hover-btn {
        transition: transform 0.2s;
    }

        .btn.hover-btn:hover {
            transform: scale(1.05);
        }

    .table-responsive {
        overflow-x: auto;
    }

    tbody td {
        vertical-align: middle;
    }

    .btn i {
        margin-right: 5px;
    }
</style>
