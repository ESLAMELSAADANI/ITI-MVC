@model UserRoleVM
@{
    ViewData["Title"] = "User Details";

    string GetRoleBadgeClass(string roleName)
    {
        return roleName.ToLower() switch
        {
            "admin" => "bg-danger",
            "instructor" => "bg-info text-dark",
            "user" => "bg-success",
            "supervisor" => "bg-primary",
            _ => "bg-secondary"
        };
    }
}

<div class="container mt-5">
    <div class="card shadow-lg border-0 rounded-4 overflow-hidden">
        <!-- Header -->
        <div class="card-header bg-gradient bg-primary text-white text-center py-4">
            <h2 class="fw-bold mb-1">
                <i class="bi bi-person-circle me-2"></i>@Model.User.UserName
            </h2>
            <small class="text-light opacity-75">User Details Overview</small>
        </div>

        <!-- Body -->
        <div class="card-body bg-light p-4">
            <table class="table table-bordered table-hover align-middle text-center mb-0 shadow-sm rounded-3">
                <thead class="table-primary text-dark">
                    <tr>
                        <th>ID</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Age</th>
                        <th>Roles</th>
                    </tr>
                </thead>
                <tbody>
                    <tr>
                        <td class="fw-semibold">@Model.User.Id</td>
                        <td>@Model.User.UserName</td>
                        <td>
                            <a href="mailto:@Model.User.Email" class="text-decoration-none fw-semibold text-primary">
                                <i class="bi bi-envelope-fill me-1"></i>@Model.User.Email
                            </a>
                        </td>
                        <td>@Model.User.Age</td>
                        <td>
                            @if (Model.RolesToDelete != null && Model.RolesToDelete.Any())
                            {
                                foreach (var role in Model.RolesToDelete)
                                {
                                    var badgeClass = GetRoleBadgeClass(role);
                                    <span class="badge @badgeClass fs-6 px-3 py-2 me-1 shadow-sm rounded-pill">
                                        <i class="bi bi-shield-lock me-1"></i>@role
                                    </span>
                                }
                            }
                            else
                            {
                                <span class="text-muted fst-italic">No roles assigned</span>
                            }
                        </td>
                    </tr>
                </tbody>
            </table>
        </div>

        <!-- Footer -->
        <div class="card-footer bg-white text-center py-3 border-top">
            <a asp-action="Index" class="btn btn-outline-secondary px-4 shadow-sm">
                <i class="bi bi-arrow-left-circle me-1"></i> Back to List
            </a>
            <a asp-action="Edit" asp-route-id="@Model.User.Id" class="btn btn-primary px-4 ms-2 shadow-sm">
                <i class="bi bi-pencil-square me-1"></i> Edit User
            </a>
        </div>
    </div>
</div>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

    <script>
        // Subtle animation for role badges
        document.querySelectorAll('.badge').forEach(badge => {
            badge.addEventListener('mouseenter', () => badge.style.transform = 'scale(1.1)');
            badge.addEventListener('mouseleave', () => badge.style.transform = 'scale(1)');
            badge.style.transition = 'transform 0.2s ease';
        });
    </script>
}
