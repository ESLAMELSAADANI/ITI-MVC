@model IEnumerable<ApplicationUser>
@{
	ViewData["Title"] = "Users";
}

<div class="container my-5">
	<div class="d-flex justify-content-between align-items-center mb-4">
		<h1 class="fw-bold text-dark mb-0">
			<i class="bi bi-people-fill text-primary me-2"></i> Users Management
		</h1>
		<a asp-action="Add" class="btn btn-primary px-4 fw-semibold shadow-sm">
			<i class="bi bi-person-plus"></i> Add New User
		</a>
	</div>

	<div class="card border-0 shadow-sm rounded-4">
		<div class="card-body p-0">
			<table class="table table-bordered table-hover align-middle text-center mb-0">
				<thead class="table-light border-bottom border-2">
					<tr class="text-secondary">
						<th style="width: 5%;">#</th>
						<th style="width: 25%;">User Name</th>
						<th style="width: 30%;">Email</th>
						<th style="width: 10%;">Age</th>
						<th style="width: 30%;">Actions</th>
					</tr>
				</thead>
				<tbody>
					@if (Model == null || !Model.Any())
					{
						<tr>
							<td colspan="5" class="text-muted py-4 fs-6">No users found</td>
						</tr>
					}
					else
					{
						foreach (var user in Model)
						{
							<tr>
								<td>@user.Id</td>
								<td class="fw-semibold">@user.UserName</td>
								<td>@user.Email</td>
								<td>@user.Age</td>
								<td>
									<div class="d-flex justify-content-center gap-2 flex-wrap">
										<a asp-action="Details" asp-route-id="@user.Id"
										   class="btn btn-sm btn-outline-primary">
											<i class="bi bi-info-circle"></i>
										</a>
										<a asp-action="ViewRoles" asp-route-id="@user.Id"
										   class="btn btn-sm btn-outline-info">
											<i class="bi bi-shield-lock"></i>
										</a>
										<a asp-action="Edit" asp-route-id="@user.Id"
										   class="btn btn-sm btn-outline-secondary">
											<i class="bi bi-pencil-square"></i>
										</a>
										<a asp-action="Delete" asp-route-id="@user.Id"
										   class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this User ?');">
											<i class="bi bi-trash"></i>
										</a>
									</div>
								</td>
							</tr>
						}
					}
				</tbody>
			</table>
		</div>
	</div>
</div>

<style>
	body {
		background-color: #f8f9fa;
		font-family: 'Segoe UI', sans-serif;
	}

	.card {
		background: #fff;
		border-radius: 1rem;
	}

	table th {
		background-color: #f1f3f5;
	}

	.table-hover tbody tr:hover {
		background-color: #f0f8ff !important;
		transition: background-color 0.2s ease-in-out;
	}

	.btn {
		transition: all 0.2s ease;
	}

		.btn:hover {
			transform: scale(1.05);
		}

	h1 i {
		vertical-align: middle;
	}
</style>
