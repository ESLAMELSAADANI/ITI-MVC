@model LoginVM
@{
    ViewData["Title"] = "Login";
}

<div class="min-vh-100 d-flex align-items-center justify-content-center bg-light"
     style="background: linear-gradient(135deg, #007bff1a, #6c63ff1a);">
    <div class="col-lg-5 col-md-7">
        <div class="card shadow-lg border-0 rounded-4 animate__animated animate__fadeIn">
            <!-- Header -->
            <div class="card-header bg-primary text-white text-center py-4 rounded-top-4">
                <div class="d-flex flex-column align-items-center">
                    <i class="bi bi-box-arrow-in-right display-4 mb-2"></i>
                    <h2 class="fw-bold mb-0">Welcome Back</h2>
                    <p class="text-light small mt-1 opacity-75">Login to manage your account</p>
                </div>
            </div>

            <!-- Body -->
            <div class="card-body p-4">
                <form asp-action="Login" method="post" novalidate>
                    <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

                    <!-- UserName -->
                    <div class="mb-3">
                        <label asp-for="UserName" class="form-label fw-semibold">
                            <i class="bi bi-envelope"></i> UserName
                        </label>
                        <input asp-for="UserName" class="form-control rounded-3 shadow-sm"
                               placeholder="Enter your email address" />
                        <span asp-validation-for="UserName" class="text-danger small"></span>
                    </div>

                    <!-- Password -->
                    <div class="mb-4 position-relative">
                        <label asp-for="Password" class="form-label fw-semibold">
                            <i class="bi bi-lock"></i> Password
                        </label>
                        <div class="input-group">
                            <input asp-for="Password" type="password"
                                   class="form-control rounded-start-3 shadow-sm"
                                   id="passwordField" placeholder="Enter your password" />
                            <button type="button" class="btn btn-outline-secondary rounded-end-3" id="togglePassword">
                                <i class="bi bi-eye"></i>
                            </button>
                        </div>
                        <span asp-validation-for="Password" class="text-danger small"></span>
                    </div>

                    <!-- Links -->
                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <a asp-action="Register" asp-controller="Account"
                           class="text-decoration-none fw-semibold text-primary">
                            <i class="bi bi-person-plus"></i> Create Account
                        </a>
                        <a asp-action="ForgotPassword" asp-controller="Account"
                           class="text-decoration-none text-muted small">
                            Forgot Password?
                        </a>
                    </div>

                    <!-- Button -->
                    <div class="d-grid">
                        <button type="submit" class="btn btn-primary shadow-sm rounded-3">
                            <i class="bi bi-box-arrow-in-right"></i> Login
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <!-- Bootstrap Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Animate.css for smooth fade effect -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css" rel="stylesheet" />

    <script>
        const passwordField = document.getElementById("passwordField");
        const togglePassword = document.getElementById("togglePassword");

        togglePassword.addEventListener("click", () => {
            const type = passwordField.type === "password" ? "text" : "password";
            passwordField.type = type;
            togglePassword.innerHTML = type === "password"
                ? '<i class="bi bi-eye"></i>'
                : '<i class="bi bi-eye-slash"></i>';
        });
    </script>
}
