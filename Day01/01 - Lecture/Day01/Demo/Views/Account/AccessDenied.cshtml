@{
    ViewData["Title"] = "Access Denied";
}

<!-- Page Styling -->
<style>
    body {
        background: radial-gradient(circle at top left, #1e2a47, #0a0f1e);
        color: #fff;
        font-family: 'Poppins', sans-serif;
        overflow: hidden;
    }

    .access-container {
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
        animation: fadeIn 1s ease-in-out;
        position: relative;
    }

    /* Subtle floating lights effect */
    .light {
        position: absolute;
        width: 200px;
        height: 200px;
        border-radius: 50%;
        background: radial-gradient(circle, rgba(0, 123, 255, 0.3), transparent 70%);
        animation: moveLight 6s infinite ease-in-out alternate;
    }

        .light:nth-child(1) {
            top: 10%;
            left: 15%;
            animation-delay: 0s;
        }

        .light:nth-child(2) {
            bottom: 20%;
            right: 15%;
            animation-delay: 2s;
        }

    .access-card {
        background: rgba(255, 255, 255, 0.05);
        border: 1px solid rgba(255, 255, 255, 0.15);
        border-radius: 25px;
        padding: 60px 45px;
        box-shadow: 0 0 35px rgba(0, 0, 0, 0.45);
        backdrop-filter: blur(15px);
        transition: all 0.4s ease-in-out;
        z-index: 2;
    }

        .access-card:hover {
            transform: translateY(-6px) scale(1.02);
            box-shadow: 0 0 50px rgba(255, 0, 0, 0.35);
        }

    .access-icon {
        font-size: 6rem;
        color: #ff3d3d;
        text-shadow: 0 0 20px rgba(255, 50, 50, 0.9);
        animation: pulse 1.5s infinite ease-in-out;
    }

    .access-title {
        font-size: 2.7rem;
        font-weight: 700;
        margin-top: 25px;
        color: #ff4d4d;
        letter-spacing: 1px;
    }

    .access-text {
        font-size: 1.1rem;
        color: #ccc;
        margin: 25px 0 45px;
        line-height: 1.7;
    }

    .btn-home {
        background: linear-gradient(90deg, #007bff, #00d4ff);
        border: none;
        font-size: 1.1rem;
        padding: 12px 28px;
        border-radius: 35px;
        color: #fff;
        font-weight: 600;
        letter-spacing: 0.5px;
        transition: all 0.3s ease;
    }

        .btn-home:hover {
            background: linear-gradient(90deg, #0062cc, #00bfff);
            transform: translateY(-2px) scale(1.05);
            box-shadow: 0 0 20px rgba(0, 123, 255, 0.6);
        }

    @@keyframes fadeIn {
        from {
            opacity: 0;
            transform: scale(0.95);
        }

        to {
            opacity: 1;
            transform: scale(1);
        }
    }

    @@keyframes pulse {
        0%, 100% {
            text-shadow: 0 0 15px rgba(255, 0, 0, 0.7);
        }

        50% {
            text-shadow: 0 0 35px rgba(255, 0, 0, 1);
        }
    }

    @@keyframes moveLight {
        0% {
            transform: translateY(0px) translateX(0px);
            opacity: 0.7;
        }

        100% {
            transform: translateY(30px) translateX(20px);
            opacity: 1;
        }
    }
</style>

<!-- Access Denied Content -->
<div class="access-container">
    <div class="light"></div>
    <div class="light"></div>

    <div class="access-card">
        <i class="bi bi-shield-lock-fill access-icon"></i>
        <h1 class="access-title">Access Denied</h1>
        <p class="access-text">
            Oops! You don’t have permission to view this page.<br />
            Please contact your administrator or return to the home page.
        </p>
        <a asp-controller="Home" asp-action="Index" class="btn btn-home">
            <i class="bi bi-house-door"></i> Back to Home
        </a>
    </div>
</div>

