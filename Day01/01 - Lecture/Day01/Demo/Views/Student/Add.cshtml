@model StudentDepartment
@{
    ViewData["Title"] = "Add Student";
    SelectList deptsSL = new SelectList(Model.Departments, "DeptId", "DeptName");
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center fw-bold fs-4">
                    <i class="bi bi-person-plus"></i> Add New Student
                </div>
                <div class="card-body p-4">
                    <form asp-action="Add" method="post" novalidate>

                        <!-- Name -->
                        <div class="mb-3">
                            <label asp-for="Student.Name" class="form-label fw-semibold">Name</label>
                            <input asp-for="Student.Name" class="form-control" placeholder="Enter student name" />
                            <span asp-validation-for="Student.Name" class="text-danger small"></span>
                        </div>

                        <!-- Age -->
                        <div class="mb-3">
                            <label asp-for="Student.Age" class="form-label fw-semibold">Age</label>
                            <input asp-for="Student.Age" class="form-control" placeholder="Enter student age" />
                            <span asp-validation-for="Student.Age" class="text-danger small"></span>
                        </div>

                        <!-- Email -->
                        <div class="mb-3">
                            <label asp-for="Student.Email" class="form-label fw-semibold">Email</label>
                            <input asp-for="Student.Email" class="form-control" placeholder="example@email.com" />
                            <span asp-validation-for="Student.Email" class="text-danger small"></span>
                        </div>

                        <!-- Department -->
                        <div class="mb-3">
                            <label asp-for="Student.DeptNo" class="form-label fw-semibold">Department</label>
                            <select asp-for="Student.DeptNo" asp-items="@deptsSL" class="form-select">
                                <option value="">-- Select Department --</option>
                            </select>
                            <span asp-validation-for="Student.DeptNo" class="text-danger small"></span>
                        </div>

                        <!-- Password -->
                        <div class="mb-3">
                            <label asp-for="Student.Password" class="form-label fw-semibold">Password</label>
                            <input asp-for="Student.Password" type="password" class="form-control" placeholder="*******" />
                            <span asp-validation-for="Student.Password" class="text-danger small"></span>
                        </div>

                        <!-- Confirm Password -->
                        <div class="mb-4">
                            <label asp-for="Student.ConfirmPassword" class="form-label fw-semibold">Confirm Password</label>
                            <input asp-for="Student.ConfirmPassword" type="password" class="form-control" placeholder="*******" />
                            <span asp-validation-for="Student.ConfirmPassword" class="text-danger small"></span>
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-center gap-3">
                            <button type="submit" class="btn btn-success px-5">
                                <i class="bi bi-plus-circle"></i> Add
                            </button>
                            <a asp-action="Index" class="btn btn-secondary px-5">
                                <i class="bi bi-arrow-left"></i> Back
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}
