@model IEnumerable<Student>
@{
	ViewData["Title"] = "Index";
}

<h1>Students</h1>
<table class="table table-bordered table-hover">
	<thead>
		<tr>
			<th>Id</th>
			<th>Name</th>
			<th>Age</th>
			<th>DeptNo</th>
			<th>DeptName</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		@if (@Model == null || @Model.Count() == 0)
		{
			<tr>
				<td colspan="6" align="center">No Students Founded!</td>
			</tr>
		}
		else
		{
			@foreach (var Student in @Model)
			{
				<tr>
					<td>@Student.Id</td>
					<td>@Student.Name</td>
					<td>@Student.Age</td>
					<td>@Student.DeptNo</td>
					<td>@Student.Department?.DeptName</td>
					<td>
						<a class="btn btn-info" asp-action="Details" asp-route-id="@Student.Id">Details</a>
						<a class="btn btn-secondary" asp-action="Edit" asp-route-id="@Student.Id">Edit</a>
						<a class="btn btn-danger" asp-action="Delete" asp-route-id="@Student.Id">Delete</a>
					</td>
				</tr>
			}
		}

	</tbody>
</table>

