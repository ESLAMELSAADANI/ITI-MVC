@model IEnumerable<Student>
@{
    ViewData["Title"] = "Students";
}

<div class="container my-5">
    <h1 class="text-center mb-4 text-primary fw-bold">
        <i class="bi bi-people-fill"></i> Students
    </h1>

    <div class="table-responsive shadow-sm rounded-4 overflow-hidden">
        <table class="table table-striped table-hover align-middle text-center mb-0">
            <thead class="table-dark">
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Age</th>
                    <th scope="col">Email</th>
                    <th scope="col">DeptNo</th>
                    <th scope="col">DeptName</th>
                    <th scope="col">Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model == null || !Model.Any())
                {
                    <tr>
                        <td colspan="7" class="text-muted py-4">
                            <i class="bi bi-exclamation-circle display-6"></i>
                            <div class="mt-2">No Students Found</div>
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var student in Model)
                    {
                        <tr class="align-middle">
                            <td class="fw-bold">@student.Id</td>
                            <td>@student.Name</td>
                            <td>@student.Age</td>
                            <td>@student.Email</td>
                            <td>@student.DeptNo</td>
                            <td>@student.Department?.DeptName</td>
                            <td class="d-flex justify-content-center flex-wrap gap-2">
                                <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@student.Id">
                                    <i class="bi bi-info-circle"></i> Details
                                </a>
                                <a class="btn btn-secondary btn-sm" asp-action="Edit" asp-route-id="@student.Id">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@student.Id"
                                   onclick="return confirm('Are you sure you want to delete this student?');">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

<style>
    .table-responsive {
        background: #ffffff;
        border-radius: 1rem;
        box-shadow: 0 8px 25px rgba(0,0,0,0.1);
        overflow: hidden;
    }

    .table-hover tbody tr:hover {
        background-color: #f1f5f9 !important;
        transform: scale(1.01);
        transition: all 0.2s;
    }

    .btn i {
        margin-right: 4px;
    }

    tbody td {
        vertical-align: middle;
    }

    @@media (max-width: 768px) {
        .table td, .table th

    {
        font-size: 0.875rem;
    }

    h1 {
        font-size: 1.75rem;
    }

    }
</style>
