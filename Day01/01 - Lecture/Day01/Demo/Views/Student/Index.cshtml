@model IEnumerable<Student>
@{
    ViewData["Title"] = "Students";
}

<div class="container my-5">
    <div class="d-flex justify-content-between align-items-center mb-4 flex-wrap gap-3">
        <h1 class="text-primary fw-bold m-0">
            <i class="bi bi-people-fill"></i> Students
        </h1>
        <a asp-action="add" class="btn btn-success fw-semibold shadow-sm px-4 py-2 hover-scale">
            <i class="bi bi-person-plus"></i> Add New Student
        </a>
    </div>

    <div class="table-responsive shadow-lg rounded-4 overflow-hidden bg-white">
        <table class="table table-striped table-hover align-middle text-center mb-0">
            <thead class="bg-dark text-white">
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Age</th>
                    <th>Email</th>
                    <th>DeptNo</th>
                    <th>DeptName</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model == null || !Model.Any())
                {
                    <tr>
                        <td colspan="7" class="text-muted py-5">
                            <i class="bi bi-exclamation-circle display-6 text-warning"></i>
                            <div class="mt-2 fs-5">No Students Found</div>
                            <a asp-action="Add" class="btn btn-outline-success mt-3 px-4">
                                <i class="bi bi-person-plus"></i> Add Student
                            </a>
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var student in Model)
                    {
                        <tr class="align-middle">
                            <td class="fw-semibold text-secondary">@student.Id</td>
                            <td>@student.Name</td>
                            <td>@student.Age</td>
                            <td>@student.Email</td>
                            <td>@student.DeptNo</td>
                            <td>@student.Department?.DeptName</td>
                            <td class="d-flex justify-content-center flex-wrap gap-2">
                                <a class="btn btn-outline-info btn-sm px-3" asp-action="Details" asp-route-id="@student.Id">
                                    <i class="bi bi-info-circle"></i> Details
                                </a>
                                <a class="btn btn-outline-primary btn-sm px-3" asp-action="Edit" asp-route-id="@student.Id">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a class="btn btn-outline-danger btn-sm px-3"
                                   asp-action="Delete" asp-route-id="@student.Id"
                                   onclick="return confirm('Are you sure you want to delete this student?');">
                                    <i class="bi bi-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <style>
        .hover-scale {
            transition: all 0.2s ease-in-out;
        }

            .hover-scale:hover {
                transform: scale(1.05);
            }

        .table-hover tbody tr {
            transition: all 0.2s ease-in-out;
        }

            .table-hover tbody tr:hover {
                background-color: #f8f9fa !important;
                transform: translateY(-3px);
            }

        .btn {
            border-radius: 0.5rem;
            transition: all 0.2s ease;
        }

            .btn:hover {
                transform: translateY(-2px);
                box-shadow: 0 4px 10px rgba(0,0,0,0.15);
            }

        .table-responsive {
            border-radius: 1rem;
        }

        tbody td {
            vertical-align: middle;
        }

        @@media (max-width: 768px) {
            .table td, .table th {
                font-size: 0.85rem;
            }

            h1 {
                font-size: 1.6rem;
            }
        }
    </style>
}
