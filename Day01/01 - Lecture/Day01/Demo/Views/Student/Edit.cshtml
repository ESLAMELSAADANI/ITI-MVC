@model StudentDepartment
@{
	ViewData["Title"] = "Edit";
	SelectList deptsSL = new SelectList(Model.Departments, "DeptId", "DeptName");
}

<h1>Edit Student (@Model.Student.Name):</h1>
<form method="post">
	<input type="hidden" asp-for="@Model.Student.Id" />

	<label class="col-form-label" asp-for="@Model.Student.Name">Name</label><br />
	<input class="form-control-sm" type="text" asp-for="@Model.Student.Name" /><span class="text-danger" asp-validation-for="Student.Name"></span><br /><br />

	<label class="col-form-label" asp-for="@Model.Student.Age">Age</label><br />
	<input class="form-control-sm" type="number" asp-for="@Model.Student.Age" /><span class="text-danger" asp-validation-for="Student.Age"></span><br /><br />

	<label class="col-form-label" asp-for="@Model.Student.Email">Email</label><br />
	<input class="form-control-sm" placeholder="example@email.com" type="email" asp-for="@Model.Student.Email" /><span class="text-danger" asp-validation-for="Student.Email"></span><br /><br />

	<label class="col-form-label" asp-for="@Model.Student.DeptNo">DeptName</label><br />
	<select class="form-select-sm" asp-items="deptsSL" asp-for="@Model.Student.DeptNo">
	</select><span class="text-danger" asp-validation-for="Student.DeptNo"></span><br /><br />

	<label class="col-form-label" asp-for="@Model.Student.Password">New Password</label><br />
	<input class="form-control-sm" placeholder="*********" type="password" asp-for="@Model.Student.Password" /><span class="text-danger" asp-validation-for="Student.Password"></span><br /><br />

	<label class="col-form-label" asp-for="@Model.Student.ConfirmPassword">Confirm Password</label><br />
	<input class="form-control-sm" placeholder="*********" type="password" asp-for="@Model.Student.ConfirmPassword" /><span class="text-danger" asp-validation-for="Student.ConfirmPassword"></span><br /><br />


	<button asp-controller="Student" asp-action="edit" class="btn btn-info">Edit</button>
	<button asp-controller="Student" asp-action="delete" class="btn btn-danger">Delete</button>
</form>
@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
