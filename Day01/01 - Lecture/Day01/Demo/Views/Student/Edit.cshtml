@model StudentDepartment
@{
    ViewData["Title"] = "Edit Student";
    SelectList deptsSL = new SelectList(Model.Departments, "DeptId", "DeptName");
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-primary text-white text-center fw-bold fs-4">
                    <i class="bi bi-pencil-square"></i> Edit Student – @Model.Student.Name
                </div>

                <div class="card-body p-4">
                    <form method="post" novalidate>
                        <input type="hidden" asp-for="Student.Id" />
                        <input type="hidden" asp-for="Student.UserId" />

                        <div class="mb-3">
                            <label class="form-label fw-semibold" asp-for="Student.Name">
                                <i class="bi bi-person"></i> Name
                            </label>
                            <input class="form-control" asp-for="Student.Name" placeholder="Enter student name" />
                            <span class="text-danger small" asp-validation-for="Student.Name"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold" asp-for="Student.Age">
                                <i class="bi bi-calendar"></i> Age
                            </label>
                            <input class="form-control" asp-for="Student.Age" placeholder="Enter age" />
                            <span class="text-danger small" asp-validation-for="Student.Age"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold" asp-for="Student.Email">
                                <i class="bi bi-envelope"></i> Email
                            </label>
                            <input class="form-control" asp-for="Student.Email" placeholder="example@email.com" />
                            <span class="text-danger small" asp-validation-for="Student.Email"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label fw-semibold" asp-for="Student.DeptNo">
                                <i class="bi bi-building"></i> Department
                            </label>
                            <select class="form-select" asp-items="deptsSL" asp-for="Student.DeptNo">
                                <option value="">Select Department</option>
                            </select>
                            <span class="text-danger small" asp-validation-for="Student.DeptNo"></span>
                        </div>

                        <hr class="my-4">

                        <div class="mb-3">
                            <label class="form-label fw-semibold" asp-for="Student.Password">
                                <i class="bi bi-lock"></i> New Password
                            </label>
                            <input class="form-control" type="password" asp-for="Student.Password" placeholder="********" />
                            <span class="text-danger small" asp-validation-for="Student.Password"></span>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-semibold" asp-for="Student.ConfirmPassword">
                                <i class="bi bi-lock-fill"></i> Confirm Password
                            </label>
                            <input class="form-control" type="password" asp-for="Student.ConfirmPassword" placeholder="********" />
                            <span class="text-danger small" asp-validation-for="Student.ConfirmPassword"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4">
                                <i class="bi bi-arrow-left"></i> Back
                            </a>
                            <button type="submit" class="btn btn-primary px-4 shadow-sm">
                                <i class="bi bi-check-circle"></i> Update
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
}

<style>
    body {
        background: linear-gradient(135deg, #f8f9fa, #e3f2fd);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .card {
        border-radius: 1rem;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
        }

    .btn {
        transition: all 0.2s ease-in-out;
        border-radius: 0.5rem;
    }

        .btn:hover {
            transform: scale(1.05);
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.15);
        }

    .form-label i {
        color: #0d6efd;
        margin-right: 6px;
    }

    .form-control, .form-select {
        border-radius: 0.5rem;
        padding: 0.6rem 0.8rem;
    }

    hr {
        border: 1px solid #dee2e6;
        opacity: 0.5;
    }

    @@media (max-width: 768px) {
        .btn {
            width: 100%;
        }

        .card-header {
            font-size: 1.2rem;
        }
    }
</style>
