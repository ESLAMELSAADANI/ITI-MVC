@model Student
@{
    ViewData["Title"] = "Student Details";
}

<div class="container my-5">
    <h1 class="text-center mb-4">
        <span class="text-primary">@Model.Name</span> Details
    </h1>

    <div class="table-responsive shadow-sm rounded-4 overflow-hidden bg-white">
        <table class="table table-striped table-hover align-middle text-center mb-0">
            <thead class="table-dark">
                <tr>
                    <th scope="col"><i class="bi bi-hash"></i> #</th>
                    <th scope="col"><i class="bi bi-person-badge"></i> Name</th>
                    <th scope="col"><i class="bi bi-calendar3"></i> Age</th>
                    <th scope="col"><i class="bi bi-building"></i> DeptNo</th>
                    <th scope="col"><i class="bi bi-diagram-3"></i> DeptName</th>
                </tr>
            </thead>
            <tbody>
                <tr class="align-middle">
                    <td>@Model.Id</td>
                    <td>@Model.Name</td>
                    <td>@Model.Age</td>
                    <td>@Model.DeptNo</td>
                    <td>@Model.Department?.DeptName</td>
                </tr>
            </tbody>
        </table>
    </div>

    <div class="d-flex justify-content-center mt-4">
        <a asp-action="Index" class="btn btn-primary btn-lg px-5 hover-btn">
            <i class="bi bi-arrow-left-circle"></i> Return
        </a>
    </div>
</div>

<style>
    body {
        background: linear-gradient(135deg, #f8f9fa, #e3f2fd);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .table-responsive {
        background: #ffffff;
        border-radius: 1rem;
        box-shadow: 0 8px 25px rgba(0,0,0,0.1);
        overflow: hidden;
    }

    .table-hover tbody tr:hover {
        background-color: #e0f3ff !important;
        transform: scale(1.01);
        transition: all 0.2s;
    }

    .btn.hover-btn {
        transition: transform 0.25s, box-shadow 0.25s;
    }

        .btn.hover-btn:hover {
            transform: scale(1.05);
            box-shadow: 0 5px 15px rgba(0,0,0,0.2);
        }

    @@media (max-width: 768px) {
        .table td, .table th

    {
        font-size: 0.875rem;
    }

    h1 {
        font-size: 1.75rem;
    }

    }
</style>
