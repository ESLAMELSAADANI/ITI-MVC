@model Student
@{
    ViewData["Title"] = "Student Details";
}

<div class="container my-5">
    <h1 class="text-center mb-4 fw-bold text-primary">
        <i class="bi bi-person-lines-fill me-2"></i> @Model.Name Details
    </h1>

    <div class="table-container shadow-lg rounded-4 p-3 bg-glass">
        <div class="table-responsive rounded-3">
            <table class="table table-striped table-hover align-middle text-center mb-0">
                <thead class="table-dark sticky-top">
                    <tr>
                        <th><i class="bi bi-hash"></i> #</th>
                        <th><i class="bi bi-person-badge"></i> Name</th>
                        <th><i class="bi bi-calendar3"></i> Age</th>
                        <th><i class="bi bi-envelope"></i> Email</th>
                        <th><i class="bi bi-building"></i> DeptNo</th>
                        <th><i class="bi bi-diagram-3"></i> DeptName</th>
                    </tr>
                </thead>
                <tbody>
                    <tr class="align-middle">
                        <td class="fw-bold">@Model.Id</td>
                        <td>@Model.Name</td>
                        <td>@Model.Age</td>
                        <td>@Model.Email</td>
                        <td>@Model.DeptNo</td>
                        <td>@Model.Department?.DeptName</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>

    <div class="d-flex justify-content-center mt-4">
        <a asp-action="Index" class="btn btn-gradient px-5 py-2">
            <i class="bi bi-arrow-left-circle me-2"></i> Return
        </a>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    body {
        background: linear-gradient(135deg, #f8f9fa, #dbeafe);
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    h1 {
        letter-spacing: 0.5px;
    }

    .bg-glass {
        background: rgba(255, 255, 255, 0.85);
        backdrop-filter: blur(10px);
        border: 1px solid rgba(255, 255, 255, 0.4);
    }

    .table-container {
        border-radius: 1rem;
        overflow: hidden;
    }

    .table thead {
        position: sticky;
        top: 0;
        z-index: 10;
    }

    .table-hover tbody tr:hover {
        background-color: #e7f3ff !important;
        transition: transform 0.2s ease, background-color 0.3s ease;
        transform: scale(1.01);
    }

    .btn-gradient {
        background: linear-gradient(45deg, #0d6efd, #00b4d8);
        color: #fff;
        border: none;
        border-radius: 50px;
        font-weight: 500;
        transition: all 0.3s ease-in-out;
        box-shadow: 0 4px 12px rgba(13, 110, 253, 0.3);
    }

        .btn-gradient:hover {
            transform: scale(1.07);
            box-shadow: 0 8px 20px rgba(0, 123, 255, 0.5);
            background: linear-gradient(45deg, #0a58ca, #0096c7);
        }

    table {
        border-collapse: separate;
        border-spacing: 0;
    }

    th {
        background-color: #0d6efd !important;
        color: white;
    }

    td, th {
        vertical-align: middle;
    }

    @@media (max-width: 768px) {
        .table td, .table th {
            font-size: 0.875rem;
        }

        h1 {
            font-size: 1.6rem;
        }

        .btn-gradient {
            width: 100%;
        }
    }
</style>
