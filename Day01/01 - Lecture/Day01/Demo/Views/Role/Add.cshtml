@model ApplicationRole
@{
    ViewData["Title"] = "Add New Role";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-6 col-md-8">
            <div class="card border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="card-header text-white text-center fw-bold fs-4"
                     style="background: linear-gradient(135deg, #28a745, #20c997);">
                    <i class="bi bi-shield-plus"></i> Add New Role
                </div>

                <div class="card-body p-4 bg-light">
                    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                    <form asp-action="Add" method="post" novalidate>
                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-semibold">
                                <i class="bi bi-shield-lock"></i> Role Name
                            </label>
                            <input asp-for="Name" class="form-control form-control shadow-sm" placeholder="Enter role name" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" class="btn btn-outline-secondary px-4 py-2 rounded-3 fw-semibold shadow-sm hover-scale">
                                <i class="bi bi-arrow-left"></i> Back
                            </a>
                            <button type="submit" class="btn btn-success px-4 py-2 rounded-3 fw-semibold shadow-sm hover-scale">
                                <i class="bi bi-check-circle"></i> Add Role
                            </button>
                        </div>
                    </form>
                </div>

                <div class="card-footer text-center small text-muted bg-white py-2">
                    <i class="bi bi-shield-check text-success"></i> Add roles confidently and securely.
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" /> 
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

    <style>
        /* Button hover animation */
        .hover-scale {
            transition: all 0.2s ease-in-out;
        }

            .hover-scale:hover {
                transform: scale(1.05);
            }

        /* Card hover floating effect */
        .card {
            transition: all 0.3s ease;
        }

            .card:hover {
                transform: translateY(-5px);
                box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
            }

        /* Input focus glow */
        input.form-control {
            border: 1px solid #dee2e6;
            transition: box-shadow 0.2s ease-in-out, border-color 0.2s ease-in-out;
        }

            input.form-control:focus {
                border-color: #28a745;
                box-shadow: 0 0 5px rgba(40, 167, 69, 0.4);
            }

        .card-header i {
            margin-right: 6px;
        }
    </style>
}
