@model List<Course>
@{
    ViewData["Title"] = "Courses";
}

<!-- Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css" />

<!-- Custom Styling -->
<style>
    body {
        background: linear-gradient(135deg, #f8f9fa, #e9ecef);
        font-family: 'Poppins', sans-serif;
    }

    .courses-container {
        background-color: #fff;
        border-radius: 15px;
        padding: 30px;
        box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
    }

    h1 {
        font-weight: 700;
        color: #212529;
        text-shadow: 0 0 10px rgba(13, 110, 253, 0.2);
    }

    .table {
        border-radius: 12px;
        overflow: hidden;
        margin-top: 20px;
    }

    thead {
        background: #0d6efd;
        color: white;
        text-transform: uppercase;
    }

    .table-hover tbody tr:hover {
        background-color: rgba(13, 110, 253, 0.1);
        transition: background 0.3s ease;
    }

    td, th {
        vertical-align: middle !important;
    }

    .btn {
        border-radius: 20px;
        font-weight: 500;
        transition: all 0.3s ease;
    }

    .btn:hover {
        transform: scale(1.05);
    }

    .btn i {
        margin-right: 5px;
    }

    .no-courses {
        color: #6c757d;
        font-style: italic;
        padding: 40px 0;
        font-size: 1.1rem;
    }

    .add-btn {
        background-color: #198754;
        color: white;
        border-radius: 30px;
        font-weight: 600;
        transition: all 0.3s ease;
    }

    .add-btn:hover {
        background-color: #157347;
        transform: translateY(-2px);
    }
</style>

<div class="container my-5">
    <div class="courses-container">
        <div class="d-flex justify-content-between align-items-center mb-3">
            <h1 class="text-center flex-grow-1">📚 Courses</h1>
            <a asp-action="Add" asp-controller="Course" class="btn add-btn ms-3 px-4">
                <i class="bi bi-plus-circle"></i> Add Course
            </a>
        </div>

        <table class="table table-bordered table-hover text-center align-middle">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Duration</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @if (Model == null || Model.Count == 0)
                {
                    <tr>
                        <td colspan="4" class="no-courses">
                            <i class="bi bi-info-circle me-2"></i> No Courses Found!
                        </td>
                    </tr>
                }
                else
                {
                    @foreach (var course in Model)
                    {
                        <tr>
                            <td>@course.Id</td>
                            <td>@course.CrsName</td>
                            <td>@course.CrsDuration H</td>
                            <td>
                                <a asp-action="Details" asp-controller="Course" asp-route-id="@course.Id" class="btn btn-info btn-sm me-1">
                                    <i class="bi bi-eye"></i> Details
                                </a>
                                <a asp-action="Edit" asp-controller="Course" asp-route-id="@course.Id" class="btn btn-secondary btn-sm me-1 text-white">
                                    <i class="bi bi-pencil-square"></i> Edit
                                </a>
                                <a asp-action="Delete" asp-controller="Course" asp-route-id="@course.Id" class="btn btn-danger btn-sm">
                                    <i class="bi bi-trash3"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>
