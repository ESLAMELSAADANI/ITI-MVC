@model Course
@{
    ViewData["Title"] = "Edit Course";
}

<div class="container mt-5">
    <div class="text-center mb-4">
        <h1 class="fw-bold text-primary display-6">
            Edit Course: <span class="text-dark">@Model.CrsName</span>
        </h1>
        <p class="text-muted">Modify the details of the course below or delete it if no longer needed.</p>
    </div>

    <div class="card shadow-lg border-0 rounded-4 mx-auto" style="max-width: 600px;">
        <div class="card-body p-5">
            <form method="post" class="needs-validation" novalidate>
                <input type="hidden" asp-for="Id" />

                <div class="mb-4">
                    <label asp-for="CrsName" class="form-label fw-semibold">Course Name</label>
                    <input asp-for="CrsName" class="form-control form-control-lg rounded-3" placeholder="Enter course name..." />
                    <span class="text-danger small" asp-validation-for="CrsName"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="CrsDuration" class="form-label fw-semibold">Duration (Hours)</label>
                    <input asp-for="CrsDuration" class="form-control form-control-lg rounded-3" placeholder="Enter duration in hours..." />
                    <span class="text-danger small" asp-validation-for="CrsDuration"></span>
                </div>

                <div class="d-flex justify-content-center gap-3 mt-4 flex-wrap">
                    <button asp-action="Edit" type="submit" class="btn btn-primary btn-lg px-5 shadow-sm rounded-pill">
                        <i class="bi bi-pencil-square me-2"></i> Save Changes
                    </button>

                    <button asp-action="Delete" type="submit" class="btn btn-danger btn-lg px-5 shadow-sm rounded-pill">
                        <i class="bi bi-trash me-2"></i> Delete Course
                    </button>

                    <a asp-action="Index" class="btn btn-outline-secondary btn-lg px-5 rounded-pill">
                        <i class="bi bi-arrow-left-circle me-2"></i> Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    body {
        background-color: #f8f9fc;
    }

    .card {
        animation: fadeUp 0.7s ease-in-out;
    }

    @@keyframes fadeUp {
        from

    {
        opacity: 0;
        transform: translateY(40px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }

    }

    .btn-primary {
        background: linear-gradient(135deg, #0d6efd, #007bff);
        border: none;
        transition: all 0.3s ease;
    }

        .btn-primary:hover {
            background: linear-gradient(135deg, #0b5ed7, #0a58ca);
            transform: scale(1.05);
        }

    .btn-danger {
        background: linear-gradient(135deg, #dc3545, #c82333);
        border: none;
        transition: all 0.3s ease;
    }

        .btn-danger:hover {
            background: linear-gradient(135deg, #bb2d3b, #a71d2a);
            transform: scale(1.05);
        }

    .btn-outline-secondary:hover {
        background-color: #e9ecef;
        transform: scale(1.05);
    }
</style>
