<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Demo</title>
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/Demo.styles.css" asp-append-version="true" />
</head>
<body class="d-flex flex-column min-vh-100">
	<header>
		<nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark border-bottom box-shadow mb-3">
			<div class="container-fluid">
				<a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Demo</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
						aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>
				<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
					<ul class="navbar-nav flex-grow-1">
						<li class="nav-item">
							<a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-white" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
						</li>
						<li class="nav-item">
							<a class="nav-link text-white" asp-controller="test" asp-action="ShowAddForm">ShowAddForm</a>
						</li>
						<li class="nav-item dropdown">
							<button class="btn btn-dark dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
								Department
							</button>
							<ul class="dropdown-menu dropdown-menu-white">
								<li><a class="dropdown-item" asp-controller="department" asp-action="index">All Depts</a></li>
								<li><a class="dropdown-item" asp-controller="department" asp-action="create">Add Department</a></li>
							</ul>
						</li>
						<li class="nav-item dropdown">
							<button class="btn btn-dark dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
								Student
							</button>
							<ul class="dropdown-menu dropdown-menu-white">
								<li><a class="dropdown-item" asp-controller="Student" asp-action="index">All Students</a></li>
								<li><a class="dropdown-item" asp-controller="Student" asp-action="add">Add Student</a></li>
							</ul>
						</li>
						<li class="nav-item dropdown">
							<button class="btn btn-dark dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
								Course
							</button>
							<ul class="dropdown-menu dropdown-menu-white">
								<li><a class="dropdown-item" asp-controller="Course" asp-action="index">All Courses</a></li>
								<li><a class="dropdown-item" asp-controller="Course" asp-action="add">Add Course</a></li>
							</ul>
						</li>
					</ul>
				</div>
			</div>
		</nav>
	</header>

	<!-- Main content area should grow to fill remaining space -->
	<div class="container flex-grow-1">
		<main role="main" class="pb-3">
			@RenderBody()
		</main>
	</div>

	<!-- Footer pushed to bottom when content is short -->
	<footer class="border-top footer text-muted mt-auto">
		<div class="container">
			&copy; 2025 - Demo - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
		</div>
	</footer>

	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
