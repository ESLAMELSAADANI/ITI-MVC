<!DOCTYPE html>
<html lang="en">
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>@ViewData["Title"] - Demo</title>

	<!-- Bootstrap & Site Styles -->
	<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
	<link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
	<link rel="stylesheet" href="~/Demo.styles.css" asp-append-version="true" />

	<!-- Bootstrap Icons (optional but enhances UX) -->
	<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" rel="stylesheet" />

	<style>
		/* Navbar Enhancements */
		.navbar-dark .navbar-nav .nav-link {
			color: #f8f9fa;
			transition: color 0.2s ease, transform 0.2s ease;
		}

			.navbar-dark .navbar-nav .nav-link:hover {
				color: #0d6efd;
				transform: translateY(-2px);
			}

		.navbar-dark .dropdown-toggle {
			color: #f8f9fa;
			border: none;
			transition: color 0.2s ease, transform 0.2s ease;
		}

			.navbar-dark .dropdown-toggle:hover {
				color: #0d6efd;
				transform: translateY(-2px);
			}

		.dropdown-menu {
			border-radius: 10px;
			box-shadow: 0 4px 10px rgba(0, 0, 0, 0.15);
		}

		.dropdown-item:hover {
			background-color: #f1f1f1;
			color: #0d6efd;
		}

		footer {
			background-color: #212529;
			color: #ccc;
			padding: 1rem 0;
			text-align: center;
		}

			footer a {
				color: #0d6efd;
				text-decoration: none;
			}

				footer a:hover {
					text-decoration: underline;
				}

		main {
			min-height: 70vh;
		}
	</style>
</head>

<body class="d-flex flex-column min-vh-100 bg-light">
	<header>
		<nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm py-3">
			<div class="container-fluid">
				<a class="navbar-brand fw-bold text-uppercase" asp-controller="Home" asp-action="Index">
					<i class="bi bi-rocket-takeoff"></i> Demo
				</a>
				<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
						aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
					<span class="navbar-toggler-icon"></span>
				</button>

				<div class="collapse navbar-collapse" id="navbarNav">
					<ul class="navbar-nav me-auto mb-2 mb-lg-0">

						<li class="nav-item">
							<a class="nav-link" asp-controller="Home" asp-action="Index"><i class="bi bi-house"></i> Home</a>
						</li>

						<li class="nav-item">
							<a class="nav-link" asp-controller="Home" asp-action="Privacy"><i class="bi bi-shield-lock"></i> Privacy</a>
						</li>

						<li class="nav-item">
							<a class="nav-link" asp-controller="Test" asp-action="ShowAddForm"><i class="bi bi-plus-circle"></i> Show Add Form</a>
						</li>

						<!-- Department Dropdown -->
						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
								<i class="bi bi-building"></i> Department
							</a>
							<ul class="dropdown-menu">
								<li><a class="dropdown-item" asp-controller="Department" asp-action="Index">All Departments</a></li>
								<li><a class="dropdown-item" asp-controller="Department" asp-action="Create">Add Department</a></li>
							</ul>
						</li>

						<!-- Student Dropdown -->
						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
								<i class="bi bi-person"></i> Student
							</a>
							<ul class="dropdown-menu">
								<li><a class="dropdown-item" asp-controller="Student" asp-action="Index">All Students</a></li>
								<li><a class="dropdown-item" asp-controller="Student" asp-action="Add">Add Student</a></li>
							</ul>
						</li>

						<!-- Course Dropdown -->
						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown">
								<i class="bi bi-journal-text"></i> Course
							</a>
							<ul class="dropdown-menu">
								<li><a class="dropdown-item" asp-controller="Course" asp-action="Index">All Courses</a></li>
								<li><a class="dropdown-item" asp-controller="Course" asp-action="Add">Add Course</a></li>
							</ul>
						</li>
					</ul>

					<!-- Optional Right Side (e.g., User / Logout / Theme) -->
					<ul class="navbar-nav ms-auto">
						<li class="nav-item">
							<a class="nav-link text-info" href="#"><i class="bi bi-person-circle"></i> Profile</a>
						</li>
					</ul>
				</div>
			</div>
		</nav>
	</header>

	<!-- Main Content -->
	<div class="container my-4 flex-grow-1">
		<main role="main" class="pb-4">
			@RenderBody()
		</main>
	</div>

	<!-- Footer -->
	<footer class="mt-auto border-top">
		<div class="container">
			<p class="mb-0 small">
				&copy; 2025 - <strong>Demo</strong> |
				<a asp-controller="Home" asp-action="Privacy">Privacy Policy</a>
			</p>
		</div>
	</footer>

	<!-- Scripts -->
	<script src="~/lib/jquery/dist/jquery.min.js"></script>
	<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
	<script src="~/js/site.js" asp-append-version="true"></script>
	@await RenderSectionAsync("Scripts", required: false)
</body>
</html>
